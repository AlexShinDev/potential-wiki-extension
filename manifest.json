{
  "manifest_version": 2,

  "name": "Academia",
  "description": "Grab highlights from articles and send to your app",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },


  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab",
    "storage"
  ]
}